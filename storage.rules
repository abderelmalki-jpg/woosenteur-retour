rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Images de produits - accessible publiquement en lecture, upload par utilisateurs authentifiés
    match /products/{userId}/{productId}/{imageType} {
      // Lecture publique pour WooCommerce et affichage web
      allow read: if true;
      
      // Écriture uniquement pour l'utilisateur propriétaire authentifié
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Images utilisateurs (avatars, etc.)
    match /users/{userId}/{allPaths=**} {
      // Lecture publique
      allow read: if true;
      
      // Écriture uniquement pour l'utilisateur propriétaire
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Tout autre chemin est bloqué par défaut
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
